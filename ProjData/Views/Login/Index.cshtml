@model ProjData.Models.DadosTabela.Login
@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/FormLogin.css")

<div id="page-wrapper chiller-theme toggled">
    <main class="page-content">
        <div class="container-fluid">
            <div class="row" id="main">
                <div class="col-sm-12 col-md-12 well" id="content">
                    <div class="login-form">
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <center>
                                <img class="img-circle" src="/img/deslogado.png" alt="User Pic" />
                            </center>
                            <br />
                            <h4 class="modal-title">ENTRAR</h4>

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i style="font-size:20px;" class="fa fa-user"></i></span>
                                    @*<input id="txtNomeLogin" senha="txtNomeLogin" type="text" class="form-control" placeholder="Nome do Usuário" required="required">*@
                                    @Html.EditorFor(x => x.Loguin, new
                               {
                                   htmlAttributes = new { id = "txtNomeLogin", senha = "txtNomeLogin", type = "text", @class = "form-control", placeholder = "Digite seu e-mail", required = "required" }
                               })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i style="font-size:20px;" class="fa fa-lock"></i></span>
                                    @*<input id="txtSenhaLogin" senha="txtSenhaLogin" type="password" class="form-control" placeholder="Senha" required="required">*@
                                    @Html.EditorFor(x => x.Senha, new { htmlAttributes = new { id = "txtSenhaLogin", senha = "txtSenhaLogin", type = "password", @class = "form-control", placeholder = "Senha", required = "required" } })
                                </div>
                            </div>
                            <div class="form-group small clearfix">
                                <a href="~/Login/ResetSenha" class="forgot-link">Esqueceu sua senha?</a>
                            </div>
                            <CENTER>
                                <input type="submit" class="button button-a button-big button-rouded" value="ENTRAR">
                            </CENTER>
                        }
                        <div class="text-center small">Não tem uma conta? <a href="~/RegistroCliente/Index">Cadastre-se!</a></div>

                    </div>

                </div>
            </div>
        </div>
    </main>
</div>
